<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    
    <style name="AppTheme.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="AppTheme.Button.Transparent">
        <item name="android:background">@color/transparent</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@drawable/button_main_text_selector</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:lines">1</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:lineSpacingExtra">7sp</item>
        <item name="android:padding">@dimen/padding_14dp</item>
    </style>

    <style name="AppButton.WhiteOnYellow">
        <item name="android:background">@drawable/button_add_beer_background_selector</item>
    </style>

    <style name="AppButton.WhiteOnBlack">
        <item name="android:background">@drawable/button_checkin_background_selector</item>
    </style>

    <style name="BeerSpecificationStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">12sp</item>
    </style>

    <style name="BeerSpecificationStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    
    <style name="BeerSpecificationStyle.Description">
        <item name="android:textColor">@color/gray_text_btn</item>
        <item name="android:layout_marginStart">@dimen/margin_10dp</item>
    </style>

    <style name="ToolbarTextStyle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="ToolbarTextStyle.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
    <style name="ToolbarTextStyle.Subtitle">
        <item name="android:textColor">@color/gray_text_btn</item>
    </style>
    <style name="Widget.MPM.Menu.CustomBackground">
        <item name="android:popupBackground">@drawable/menu_background</item>
        <item name="android:popupElevation">@dimen/elevation_5dp</item>
        <item name="mpm_activeIconColor">@color/gray_text_btn</item>
        <item name="android:textSize">@dimen/text_size_14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/text_color</item>
    </style>
</resources>
